<%= link_to "All Categories", categories_path %>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Messages</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @category.name %></td>
        <td><%= @category.description %></td>
        <td>
          <%= @messages.each do |message| %>
            <%= message.content %><br>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
