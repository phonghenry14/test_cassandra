<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |f| %>
      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :description %><br/>
        <%= f.text_field :description %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
