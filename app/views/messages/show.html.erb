<%= link_to "All Messages", messages_path %>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Category</th>
        <th>ID</th>
        <th>Modify</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @message.content %></td>
        <td><%= link_to @category.name, category_path(@category) %>
        </td>
        <td><%= @message.id %></td>
        <td>
          <%= link_to "", edit_message_path(id: @message.id, category_id: @message.category_id),
              class: "glyphicon glyphicon-edit" %>
          <%= link_to "", message_path(id: @message.id, category_id: @message.category_id),
            method: :delete, data: {confirm: "Are you sure?"},
            class: "glyphicon glyphicon-trash" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
