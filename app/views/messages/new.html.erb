<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @message do |f| %>
      <div class="field">
        <%= f.label :content %><br/>
        <%= f.text_field :content, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :category_id, "Category" %>
        <%= f.collection_select :category_id, Category.all, :id, :name %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
