<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :description %><br/>
        <%= f.text_field :description %><br/><br/>
      </div>
      <div class="actions">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
