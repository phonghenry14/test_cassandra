<h1>Messages Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @messages.each do |message| %>
    <li>
      <h3>
        <%= link_to message.title, controller: :messages, action: :show, id: message.id %>
      </h3>
    </li>
  <% end %>
</ul>
